<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="0pt"
        android:layout_height="0pt"
        android:id="@+id/tvNameRowCate"
        android:text="Name"
        android:gravity="center_vertical"
        android:textSize="13pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnDelRowCate"
        app:layout_constraintBottom_toBottomOf="@id/btnDelRowCate"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelRowCate"
        android:text="Delete"
        app:layout_constraintLeft_toRightOf="@+id/tvNameRowCate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvNameRowCate"/>
</androidx.constraintlayout.widget.ConstraintLayout>