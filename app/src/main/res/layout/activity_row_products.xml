<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imgRowProduct"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNameRowProducts"
        android:text="NAME"
        android:textSize="13pt"
        app:layout_constraintTop_toTopOf="@id/imgRowProduct"
        app:layout_constraintLeft_toRightOf="@+id/imgRowProduct"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTypeRowProducts"
        android:text="Type"
        android:textSize="10pt"
        app:layout_constraintTop_toBottomOf="@id/tvNameRowProducts"
        app:layout_constraintLeft_toRightOf="@+id/imgRowProduct"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnViewRowProduct"
        android:layout_marginLeft="10dp"
        android:text="View"
        app:layout_constraintLeft_toRightOf="@id/tvTypeRowProducts"
        app:layout_constraintTop_toTopOf="@id/tvTypeRowProducts"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>